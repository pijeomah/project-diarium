<h1>Journal Entries</h1>
<div class="row">
    {{#each entries}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- todo editIcon --}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{ stripTags  (truncate body 90)}}</p>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/entries/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/entries/{{_id}}" class="btn blue-grey darken-4">Read Here</a>
                </div>
            </div>
        </div>

    {{else}}

        <p>No entries to display</p>
    {{/each}}
</div>